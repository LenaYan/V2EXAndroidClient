<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.rayman.v2ex.viewmodel.topic.TopicHeaderVM" />

        <import type="android.text.Html" />

        <import type="com.rayman.v2ex.widget.utils.DateUtil" />

        <variable
            name="viewModel"
            type="TopicHeaderVM" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/padding_ss"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/padding_m">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_m"
            android:paddingLeft="@dimen/padding_l"
            android:paddingRight="@dimen/padding_l"
            android:paddingTop="@dimen/padding_m">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/clickable_view"
                    style="@style/ClickableStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:foreground="@drawable/list_selector_corner"
                    android:onClick="@{viewModel.onAvatarClicked}">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/icon_size_s"
                        android:layout_height="@dimen/icon_size_s"
                        android:scaleType="centerCrop"
                        android:src="@{viewModel.entity.member.avatarLarge}"
                        app:riv_border_width="0dp"
                        app:riv_corner_radius="@dimen/btn_corner"
                        app:riv_mutate_background="true" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_m"
                    android:layout_toRightOf="@id/clickable_view"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_m"
                        android:text="@{viewModel.entity.title,default=Title}"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="@dimen/text_xl" />

                    <LinearLayout
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_m"
                        android:layout_marginTop="@dimen/padding_m"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{viewModel.entity.member.username,default=UserName}"
                            android:textSize="@dimen/text_m" />

                        <View style="@style/PointStyle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{DateUtil.getFormatPassTime(viewModel.entity.created),default=Date}"
                            android:textSize="@dimen/text_m" />

                        <View style="@style/PointStyle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{@string/reply_count_format(viewModel.entity.replies),default=9999}"
                            android:textSize="@dimen/text_m" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:layout_marginBottom="@dimen/padding_l"
                android:layout_marginTop="@dimen/padding_l"
                android:background="@color/divider_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.entity.content,default=Content}"
                android:textColor="@color/text_black"
                android:textIsSelectable="true" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
