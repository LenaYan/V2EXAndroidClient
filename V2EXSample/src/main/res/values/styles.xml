<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="selectableItemBackground">@drawable/bg_clickable_item</item>
        <item name="selectableItemBackgroundBorderless">@drawable/bg_clickable_item_circle</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Tran">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBar" parent="@style/Widget.AppCompat.Toolbar" />

    <style name="ClickableStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ClickableStyle.Circle">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="ClickableStyle.Corner">
        <item name="android:background">@drawable/bg_clickable_item_corner</item>
    </style>

    <style name="CountTagStyle">
        <item name="android:background">@drawable/bg_tag_count</item>
        <item name="android:paddingBottom">@dimen/padding_ss</item>
        <item name="android:paddingTop">@dimen/padding_ss</item>
        <item name="android:paddingLeft">@dimen/padding_l</item>
        <item name="android:paddingRight">@dimen/padding_l</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="CountTagStyle.Small">
        <item name="android:paddingLeft">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_m</item>
    </style>

    <style name="CountTagStyle.Light">
        <item name="android:background">@drawable/bg_tag_count_light</item>
    </style>

    <style name="CountTagStyle.Small.Light">
        <item name="android:background">@drawable/bg_tag_count_light</item>
    </style>

    <style name="NodeTagStyle" parent="ClickableStyle">
        <item name="android:paddingBottom">@dimen/padding_ss</item>
        <item name="android:paddingTop">@dimen/padding_ss</item>
        <item name="android:paddingLeft">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_m</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:background">@drawable/bg_tag_node</item>
    </style>

    <style name="PointStyle">
        <item name="android:layout_marginRight">@dimen/padding_m</item>
        <item name="android:layout_marginLeft">@dimen/padding_m</item>
        <item name="android:background">@drawable/bg_point</item>
        <item name="android:layout_width">@dimen/point_dia</item>
        <item name="android:layout_height">@dimen/point_dia</item>
    </style>

    <style name="IconTagStyle" parent="ClickableStyle">
        <item name="android:paddingTop">@dimen/padding_s</item>
        <item name="android:paddingBottom">@dimen/padding_s</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/padding_l</item>
        <item name="android:paddingRight">@dimen/padding_l</item>
        <item name="android:background">@drawable/bg_tag_icon</item>
        <item name="android:drawablePadding">@dimen/padding_m</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">@color/text_black_light</item>
        <item name="android:textColorLinkInverse">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
