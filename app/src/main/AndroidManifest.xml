<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.rayman.v2ex"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".app.V2EXApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/V2EXTheme">
        <activity
            android:name=".ui.view.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.account.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/V2EXTheme" />
        <activity
            android:name=".ui.view.node.NodeActivity"
            android:label="@string/title_activity_node"
            android:theme="@style/V2EXTheme" />
        <activity
            android:name=".ui.view.topic.TopicActivity"
            android:label="@string/title_activity_topic"
            android:theme="@style/V2EXTheme" />
    </application>

</manifest>
