<layout>

    <data>

        <import type="com.ray.mvvm.lib.widget.anotations.PageState" />

        <import type="com.ray.mvvm.lib.viewmodel.EndLessListVM" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="EndLessListVM" />

    </data>

    <ProgressBar android:id="@+id/load_more_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:visibility="@{viewModel.state == PageState.LOAD_MORE ? View.VISIBLE : View.GONE,default=gone}" />

</layout>
